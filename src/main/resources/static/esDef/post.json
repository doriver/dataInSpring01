{
    "settings": {
      "analysis": {
        "tokenizer": {
          "my_nori_tokenizer": {
            "type": "nori_tokenizer",
            "decompound_mode": "mixed",
            "discard_punctuation": "true"
          }
        },
        "filter": {
          "stopwords": {
            "type": "stop",
            "stopwords": ["이", "가", "은", "는", "를", "의", "에", "와", "과", "로", "에서", "건", "것", "하지만", "그리고", "또는", "보", "the", "and", "is", "are", "안녕하세요", "도와주세요", "질문", "답변", "감사합니다"]
          },
          "nori_part_of_speech": {
            "type": "nori_part_of_speech",
            "stoptags": ["E", "IC", "J", "MAG", "MAJ", "MM", "SP", "SSC", "SSO", "SC", "SE", "XPN", "XSA", "XSN", "XSV", "UNA", "NA", "VSV"]
          },
          "english_stemmer": {
            "type": "stemmer",
            "language": "english"
          }
        },
        "analyzer": {
          "my_multi_language_analyzer": {
            "type": "custom",
            "tokenizer": "my_nori_tokenizer",
            "filter": ["lowercase", "stopwords", "trim", "nori_part_of_speech", "english_stemmer"],
            "char_filter": ["html_strip"]
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "id": { "type": "keyword" },
        "nickname": { "type": "keyword" },
        "title": {
          "type": "text",
          "fields": { "keyword": { "type": "keyword" } },
          "analyzer": "my_multi_language_analyzer",
          "search_analyzer": "my_multi_language_analyzer"
        },
        "content": {
          "type": "text",
          "analyzer": "my_multi_language_analyzer",
          "search_analyzer": "my_multi_language_analyzer"
        },
        "category": { "type": "keyword" },
        "viewCount": { "type": "integer" },
        "likeCount": { "type": "integer" },
        "replyCount": { "type": "integer" },
        "createdAt": {
          "type": "date",
          "format": "yyyy-MM-dd'T'HH:mm:ss||epoch_millis"
        },
        "replies": {
          "type": "nested",
          "properties": {
            "id": { "type": "keyword" },
            "nickname": { "type": "keyword" },
            "content": { "type": "text" },
            "createdAt": {
              "type": "date",
              "format": "yyyy-MM-dd'T'HH:mm:ss||epoch_millis"
            }
          }
        }
      }
    }
  }